{
  "name": "vscode-rojo",
  "displayName": "Rojo - Roblox Studio Sync",
  "description": "Rojo for VS Code",
  "version": "2.1.2",
  "repository": {
    "url": "https://github.com/rojo-rbx/vscode-rojo"
  },
  "publisher": "evaera",
  "engines": {
    "vscode": "^1.78.2"
  },
  "icon": "assets/extension-icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.project.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-rojo.openMenu",
        "title": "Open Menu",
        "category": "Rojo"
      },
      {
        "command": "vscode-rojo.serveProject",
        "title": "Serve",
        "category": "Rojo",
        "icon": "$(testing-run-all-icon)"
      },
      {
        "command": "vscode-rojo.buildProject",
        "title": "Build",
        "category": "Rojo",
        "icon": "$(wrench)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-rojo",
          "title": "Rojo",
          "icon": "assets/rojo-icon.png"
        }
      ]
    },
    "views": {
      "vscode-rojo": [
        {
          "id": "vscode-rojo.projects",
          "name": "Projects",
          "icon": "assets/rojo-icon.png",
          "contextualTitle": "Rojo Projects"
        },
        {
          "id": "vscode-rojo.projectDetails",
          "name": "Project Details",
          "icon": "assets/rojo-icon.png",
          "contextualTitle": "Project Details"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-rojo.serveProject",
          "when": "view == vscode-rojo.projects",
          "group": "inline@1"
        },
        {
          "command": "vscode-rojo.buildProject",
          "when": "view == vscode-rojo.projects",
          "group": "inline@2"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": "*.project.json",
        "url": "./dist/project.schema.json"
      },
      {
        "fileMatch": "*.project.jsonc",
        "url": "./dist/project.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "14.x",
    "@types/unzipper": "^0.10.5",
    "@types/vscode": "^1.63.0",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "node-fetch": "^3.2.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "unzipper": "^0.10.11",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "which": "^2.0.2"
  }
}
